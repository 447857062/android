<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/layout_top_content"
        android:background="@drawable/radius8_bg_white_layout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/halfrectangle_top_buttom_background"
            android:id="@+id/layout_from_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height">
            <TextView
                android:text="从相册中选取"
                android:textSize="@dimen/delete_textview_size"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/halfrectangle_buttom_button_background"
            android:id="@+id/layout_picture"
            android:layout_below="@+id/layout_from_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height">
            <TextView
                android:text="拍照"
                android:textSize="@dimen/delete_textview_size"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_cancel"
        android:layout_below="@+id/layout_top_content"
        android:background="@drawable/air_dialog_cancel_button_background"
        android:layout_marginTop="@dimen/list_item_textview_margin_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_content_height">
        <TextView
            android:text="取消"
            android:textSize="@dimen/delete_textview_size"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/delete_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
</RelativeLayout>