<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.smartSwitch.SwitchTwoActivity">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_with_right_have_text_have_textbackground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:background="@color/white_background">

        <FrameLayout
            android:layout_marginTop="@dimen/smart_switch_mainpage_center_image_margintop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roadswitchoff"
            android:layout_width="@dimen/smart_switch_mainpage_center_image_width_height"
            android:layout_height="@dimen/smart_switch_mainpage_center_image_width_height">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_switch_left"
                android:background="@drawable/roadswitchlefton"
                android:layout_gravity="left|center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_switch_right"
                android:background="@drawable/roadswitchrighton"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>
