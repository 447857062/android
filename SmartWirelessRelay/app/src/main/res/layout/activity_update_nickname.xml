<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.personal.usrinfo.UpdateNicknameActivity">
    <include layout="@layout/layout_title_with_right_have_text_have_textbackground" android:id="@+id/layout_title"/>
    <RelativeLayout
        android:layout_below="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <deplink.com.smartwirelessrelay.homegenius.view.edittext.ClearEditText
            android:layout_marginTop="15dp"
            android:id="@+id/edittext_update_nickname"
            android:paddingLeft="15dp"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/room_type_text"
            android:hint="ClamDown"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height" />
    </RelativeLayout>

</RelativeLayout>
