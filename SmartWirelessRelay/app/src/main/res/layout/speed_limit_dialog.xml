<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="@drawable/addtoblack_dialog_background">

    <TextView
        android:id="@+id/textview_unbind_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="10dp"
        android:text="限速"
        android:textColor="@color/text_color_3A3A3A"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/layout_download_limit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textview_unbind_device_type"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_download_speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="下载速度"
            android:gravity="center_vertical"

            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xhdpi_15" />

        <EditText
            android:id="@+id/edittext_download_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="最大5位数"
            android:textSize="@dimen/text_size_xhdpi_15"
            android:maxLength="5"
            android:inputType="number"
            android:layout_toLeftOf="@+id/textview_download_speed_unit"
            android:layout_toRightOf="@+id/textview_download_speed" />

        <TextView
            android:id="@+id/textview_download_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="KB/S"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xhdpi_15" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_download_limit"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_upload_speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="上传速度"
            android:gravity="center_vertical"

            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xhdpi_15" />

        <EditText
            android:id="@+id/edittext_upload_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="最大5位数"
            android:textSize="@dimen/text_size_xhdpi_15"
            android:inputType="number"
            android:maxLength="5"
            android:layout_toLeftOf="@+id/textview_upload_speed_unit"
            android:layout_toRightOf="@+id/textview_upload_speed" />

        <TextView
            android:id="@+id/textview_upload_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="KB/S"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xhdpi_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_sure"
            android:gravity="center_vertical|center_horizontal"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_sure"
            android:gravity="center_vertical|center_horizontal"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>