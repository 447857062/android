<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.router.wifi.AlertWifiPasswordActivity">
    <include layout="@layout/layout_title_with_right_have_text_have_textbackground" android:id="@+id/layout_topbar"/>

    <!--设置密码-->
    <RelativeLayout
        android:layout_marginTop="@dimen/layout_room_content_margin_top"
        android:paddingLeft="@dimen/layout_content_margin_left_right"
        android:paddingRight="@dimen/layout_content_margin_left_right"
        android:id="@+id/layout_password"
        android:layout_below="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:layout_height="@dimen/layout_item_content_height">
        <TextView

            android:layout_centerVertical="true"
            android:id="@+id/textview_password"
            android:layout_alignParentLeft="true"
            android:text="设置密码"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <deplink.com.smartwirelessrelay.homegenius.view.edittext.ClearEditText
            android:id="@+id/edittext_add_device_input_name"
            android:layout_toLeftOf="@+id/image_input_eye_password"
            android:hint="请输入设置密码（最少8个字）"
            android:textColor="@color/huise"
            android:textSize="@dimen/text_size_small"
            android:layout_toRightOf="@+id/textview_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image_input_eye_password"
            android:layout_width="48dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hideicon" />
    </RelativeLayout>
    <!--再次设置密码-->
    <RelativeLayout
        android:layout_marginTop="@dimen/list_item_textview_margin_top"
        android:paddingLeft="@dimen/layout_content_margin_left_right"
        android:paddingRight="@dimen/layout_content_margin_left_right"
        android:id="@+id/layout_password_again"
        android:layout_below="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:layout_height="@dimen/layout_item_content_height">
        <TextView

            android:layout_centerVertical="true"
            android:id="@+id/textview_password_again"
            android:layout_alignParentLeft="true"
            android:text="确认密码"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <deplink.com.smartwirelessrelay.homegenius.view.edittext.ClearEditText
            android:id="@+id/edittext_password_again"
            android:layout_toLeftOf="@+id/image_input_eye_password_again"
            android:hint="请确认密码"
            android:textColor="@color/huise"
            android:textSize="@dimen/text_size_small"
            android:layout_toRightOf="@+id/textview_password_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image_input_eye_password_again"
            android:layout_width="48dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hideicon" />
    </RelativeLayout>

</RelativeLayout>
