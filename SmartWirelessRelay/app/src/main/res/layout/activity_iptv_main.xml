<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.remoteControl.topBox.IptvMainActivity">
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="机顶盒遥控"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageview_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_select_show_current_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_title"
        android:background="@android:color/holo_green_light">

        <Button
            android:id="@+id/button_control_base"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="基本控制" />

        <Button
            android:id="@+id/button_control_number"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="数字控制" />
    </RelativeLayout>
    <FrameLayout
        android:layout_below="@+id/layout_select_show_current_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--基本控制-->
        <RelativeLayout
            android:id="@+id/layout_control_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layout_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/framelayout_center_control"
                android:layout_below="@+id/layout_power"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp">
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_left"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_right"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_top"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_button"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_center"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/layout_ch_volume"
                android:layout_below="@+id/framelayout_center_control"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageview_ch_reduce"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageview_ch_reduce"
                    android:id="@+id/imageview_ch_add"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageview_ch_add"
                    android:id="@+id/imageview_volum_reduce"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageview_volum_reduce"
                    android:id="@+id/imageview_volum_add"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/layout_ch_volume"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageview_volume_on_off"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_volume_on_off"
                    android:id="@+id/imageview_control_list"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_control_list"
                    android:id="@+id/imageview_control_back"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
        <!--数字控制-->
        <RelativeLayout
            android:id="@+id/layout_control_number"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:paddingTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layout_123"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_launcher"

                    android:id="@+id/imageview_number_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_number_1"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_number_2"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_456"
                android:layout_below="@+id/layout_123"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_number_4"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_number_5"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_789"
                android:layout_below="@+id/layout_456"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_number_7"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/imageview_number_8"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/imageview_number_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_0_avtv"
                android:layout_below="@+id/layout_789"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageview_number_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
