<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@drawable/device_item_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_content_margin_left_right"
    android:paddingRight="@dimen/layout_content_margin_left_right">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imageview_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textview_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_item_textview_margin_left"
        android:layout_toRightOf="@+id/imageview_device_type"
        android:text="中继器"
        android:textColor="@color/room_type_text" />


    <TextView
        android:text="在线"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/blue"
        android:id="@+id/textview_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/list_item_imageview_onlinestatu_margin_right"
        android:layout_toLeftOf="@+id/imageview_arror_right"
         />

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imageview_arror_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/directionicon" />
</RelativeLayout>