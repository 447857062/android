<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" />

    <deplink.com.smartwirelessrelay.homegenius.qrcode.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_show_scan_explan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:text="将二维码/条码放入框内，即可自动扫描"
        android:textColor="@color/text_color_3A3A3A"
        android:textSize="@dimen/text_size_xhdpi_15" />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/adddevice_qrcode_capture_buttom_cancel_marginbuttom"
        android:id="@id/textview_cancel"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_top_bar_item_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>

