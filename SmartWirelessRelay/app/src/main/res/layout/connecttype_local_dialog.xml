<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/layout_top_content"
        android:background="@drawable/radius8_bg_white_layout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/halfrectangle_top_buttom_background"
            android:id="@+id/layout_mode_hot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height">
            <TextView
                android:text="请选择上网方式"
                android:textSize="@dimen/layout_top_bar_item_text_size"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/room_type_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/button_delete_background"
            android:id="@+id/layout_ppop"
            android:layout_below="@+id/layout_mode_hot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height">
            <TextView
                android:text="宽带拨号"

                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/title_blue_bg"
                android:textSize="@dimen/text_size_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/button_delete_background"
            android:id="@+id/layout_dynamics_ip"
            android:layout_below="@+id/layout_ppop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height">
            <TextView
                android:text="动态IP"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/title_blue_bg"
                android:textSize="@dimen/text_size_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/button_delete_background"
            android:id="@+id/layout_static_ip"
            android:layout_below="@+id/layout_dynamics_ip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height">
            <TextView
                android:text="静态IP"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/title_blue_bg"
                android:textSize="@dimen/text_size_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/aircondition_mode"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/halfrectangle_buttom_button_background"
            android:id="@+id/layout_wireless_relay"
            android:layout_below="@+id/layout_static_ip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height">
            <TextView
                android:text="无线中继"
                android:textColor="@color/title_blue_bg"
                android:textSize="@dimen/text_size_small"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_cancel"
        android:layout_below="@+id/layout_top_content"
        android:background="@drawable/air_dialog_cancel_button_background"
        android:layout_marginTop="@dimen/list_item_textview_margin_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_content_height">
        <TextView
            android:text="取消"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/delete_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
</RelativeLayout>