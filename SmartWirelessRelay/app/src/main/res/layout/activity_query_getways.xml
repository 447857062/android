<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.getway.QueryGetwaysActivity">
    <include layout="@layout/layout_title_with_back_center_titletext" android:id="@+id/layout_title"/>

    <ImageView
        android:id="@+id/imageview_animation"
        android:layout_below="@+id/layout_title"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="正在扫描网关设备..."
        android:gravity="center_horizontal"
        android:id="@+id/textview_show_scan_getway_device"
        android:layout_below="@+id/imageview_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="取消"
        android:gravity="center_horizontal"
        android:id="@+id/textview_cancel"
        android:layout_below="@+id/textview_show_scan_getway_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
