<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.getway.QueryGetwaysActivity">
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="网关"
            android:textColor="@android:color/white" />


    </RelativeLayout>
    <ImageView
        android:id="@+id/imageview_animation"
        android:layout_below="@+id/layout_title"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="正在扫描网关设备..."
        android:gravity="center_horizontal"
        android:id="@+id/textview_show_scan_getway_device"
        android:layout_below="@+id/imageview_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="取消"
        android:gravity="center_horizontal"
        android:id="@+id/textview_cancel"
        android:layout_below="@+id/textview_show_scan_getway_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
