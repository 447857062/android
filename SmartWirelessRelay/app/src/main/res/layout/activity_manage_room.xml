<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.room.ManageRoomActivity">
    <include layout="@layout/layout_title_with_right_have_image_have_textbackground" android:id="@+id/layout_title"/>


    <RelativeLayout
        android:id="@+id/layout_room_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_title"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="房间名称" />

        <TextView
            android:text="名称"
            android:layout_centerVertical="true"
            android:id="@+id/textview_room_name"
            android:gravity="center_vertical"

            android:layout_marginRight="80dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageview_arror_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_getway"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_room_name"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="网关：家里的网关" />

        <ImageView
            android:id="@+id/imageview_getway_arror_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>
    <Button
        android:layout_marginTop="100dp"
        android:textColor="@android:color/holo_red_light"
        android:text="删除房间"
        android:layout_below="@+id/layout_getway"
        android:id="@+id/button_delete_room"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>
