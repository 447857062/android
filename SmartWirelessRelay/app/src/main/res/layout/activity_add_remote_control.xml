<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.remoteControl.airContorl.add.addRemoteControlActivity">
    <RelativeLayout
        android:id="@+id/layout_title"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/imageview_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="添加空调遥控器"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/textview_introduce"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/layout_title"
        android:text="请对准空调按住按键，空调响应时请立即松手"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/textview_introduce"
        android:layout_marginTop="50dp"
        android:id="@+id/button_test"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:text="按键测试"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_below="@+id/button_test"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/textview_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>
    <RelativeLayout
        android:id="@+id/layout_device_response"
       android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="设备有响应了吗"
            android:id="@+id/textview_device_response"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_below="@+id/textview_device_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button

                android:id="@+id/button_ng"
                android:text="否"
                android:layout_alignParentLeft="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <Button
                android:text="是"
                android:id="@+id/button_ok"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
