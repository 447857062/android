<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.smartlock.EditSmartLockActivity">
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:background="@android:color/holo_blue_light"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="网关"
            android:textColor="@android:color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_getway_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layout_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_device_name"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="网关名称:" />

        <EditText
            android:hint="我家的网关"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:id="@+id/edittext_input_devie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_device_name" />
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/edittext_input_devie_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imageview_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_select_room"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_getway_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_room_name"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="房间分类:" />

        <TextView
            android:hint=""
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:id="@+id/textview_select_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_room_name" />
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/textview_select_room_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imageview_roomname_arror_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:background="@color/blue"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_select_room"
        android:id="@+id/button_delete_device"
        android:text="删除设备"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>
