<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="@drawable/addtoblack_dialog_background">

    <TextView
        android:id="@+id/textview_unbind_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/layout_room_content_margin_top"
        android:textColor="@color/huise"
        android:textSize="@dimen/layout_top_bar_item_text_size" />

    <TextView
        android:id="@+id/textivew_msg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="left"
        android:textColor="@color/room_type_text"
        android:textSize="@dimen/text_size_small"
        android:layout_below="@+id/textview_unbind_device_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/textivew_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/router_wifirelay_connectdialogs_button_height"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/layout_content_margin_left_right"
        android:layout_marginRight="@dimen/layout_content_margin_left_right">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/router_wifirelay_connectdialogs_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/wifirelay_connect_button_ng_bg"
            android:gravity="center_vertical|center_horizontal"
            android:text="取消"
            android:textColor="@color/title_blue_bg"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="@dimen/router_wifirelay_connectdialogs_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/wifirelay_connect_button_yes_bg"
            android:gravity="center_vertical|center_horizontal"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>