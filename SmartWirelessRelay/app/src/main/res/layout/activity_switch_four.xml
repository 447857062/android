<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deplink.homegenius.activity.device.smartSwitch.SwitchFourActivity">
    <include layout="@layout/layout_title_with_right_have_text_have_textbackground" android:id="@+id/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:background="@color/white_background">

        <RelativeLayout
            android:layout_marginTop="@dimen/smart_switch_mainpage_center_image_margintop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fourwayswitchoff"
            android:layout_width="@dimen/smart_switch_mainpage_center_image_width_height"
            android:layout_height="@dimen/smart_switch_mainpage_center_image_width_height">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/button_switch_left"
                android:layout_alignParentLeft="true"

                 />
            <Button
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/button_switch_2"

                 />
            <Button
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/button_switch_3"
                />

            <Button
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/button_switch_right"
                 />
        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/button_all_switch"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
