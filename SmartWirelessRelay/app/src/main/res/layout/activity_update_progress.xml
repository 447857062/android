<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deplink.homegenius.activity.personal.softupdate.UpdateProgressActivity">
    <include
        android:id="@+id/layout_topbar"
        layout="@layout/layout_title_with_back_center_titletext" />
    <ImageView
        android:layout_below="@+id/layout_topbar"
        android:id="@+id/image_show_logo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/set_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/image_show_logo"
        android:id="@+id/textview_updateing"
        android:layout_marginTop="40dp"
        android:text="中移智家APP下载中..."
        android:textColor="@color/room_type_text"
        android:textSize="@dimen/text_size_small"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.daimajia.numberprogressbar.NumberProgressBar
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textview_updateing"
        android:id="@+id/number_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:progress_unreached_color="#CCCCCC"
        custom:progress_reached_color="@color/color_2B89F3"
        custom:progress_unreached_bar_height="5dp"
        custom:progress_reached_bar_height="5dp"
        custom:progress_text_size="12dp"
        custom:progress_text_color="@color/color_2B89F3"
        custom:progress_text_offset="1dp"
        custom:progress_text_visibility="visible"
        custom:progress_max="100"
        />
</RelativeLayout>
