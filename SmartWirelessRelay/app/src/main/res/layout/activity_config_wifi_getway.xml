<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.personal.wifi.ConfigWifiGetwayActivity">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_with_back_center_titletext" />


    <RelativeLayout
        android:id="@+id/layout_explan_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/layout_title"
        android:background="@color/gray"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_explan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="请确认WiFI网关指示灯双闪（配置模式）。按下" />

        <TextView
            android:id="@+id/textview_explan_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_explan_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="REST按键即可进入配置模式" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_wifi_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_explan_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_wifi_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:minWidth="100dp"
            android:text="WiFi名称" />

        <TextView
            android:id="@+id/textview_wifi_name_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_wifi_name_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_wifi_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textview_getway_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:minWidth="100dp"
            android:text="输入WiFI密码" />

        <EditText
            android:id="@+id/edittext_input_wifi_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_getway_name"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入WiFi密码" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_connect_right_now"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        android:text="立即连接" />
</RelativeLayout>
