<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.router.firmwareupdate.UpdateImmediatelyActivity">
    <RelativeLayout
        android:id="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue_add_new_router_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp">

            <FrameLayout
                android:id="@+id/layout_back"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/arror_back" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/firmware_upgrade"
                android:textColor="@color/main_interface_topbar_text_color"
                android:textSize="@dimen/mian_interface_topbar_text_size" />



        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white_DDEBFC" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_versioninfo"
        android:layout_below="@+id/layout_topbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_logo"
            android:layout_centerVertical="true"
            android:src="@drawable/firmwareupdate_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="@dimen/firmware_upgrade_text_margin_image"
            android:layout_toRightOf="@+id/image_logo"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textview_version_code"
                android:text="联客路由固件 2.2.10"
                android:textSize="18dp"
                android:textColor="@color/color_2B89F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textview_file_size"
                android:text="100.5 KB"
                android:layout_marginTop="20dp"
                android:textSize="12dp"
                android:textColor="@color/color_2B89F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/layout_versioninfo"
        android:id="@+id/textview_update_what"
        android:text="联客路由固件 2.2.10 包含问题修复以及对路 由器安全性的改进。"
        android:textSize="@dimen/text_size_xhdpi_15"
        android:textColor="@color/color_2B89F3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/last_next_step_layout_width"
        android:layout_height="@dimen/last_next_step_layout_height"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        >

        <ImageView
            android:id="@+id/image_last_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/last_or_next_step" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/last_next_step_text_size"  />

            <Button
                android:background="@null"
                android:id="@+id/button_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/last_next_step_margin"
                android:layout_toEndOf="@+id/button_cancel"
                android:layout_toRightOf="@+id/button_cancel"
                android:text="升级"
                android:textColor="@color/white"
                android:textSize="@dimen/last_next_step_text_size" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
