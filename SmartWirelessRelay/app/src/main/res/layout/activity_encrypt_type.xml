<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.router.wifi.EncryptTypeActivity">
    <include layout="@layout/layout_title_with_right_have_text_have_textbackground" android:id="@+id/layout_topbar"/>


    <RelativeLayout

        android:id="@+id/layout_type_strong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_content_height"
        android:layout_below="@+id/layout_topbar"
        android:layout_marginTop="@dimen/layout_room_content_margin_top"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_content_margin_left_right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="强加密"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small" />
        <ImageView
            android:id="@+id/imageview_strong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_content_margin_left_right"
            android:src="@drawable/checkbox_style_imagelevel" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/huise" />

    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/layout_type_mix"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_content_height"
        android:layout_below="@+id/layout_type_strong"
        android:layout_marginTop="@dimen/list_item_textview_margin_top"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_content_margin_left_right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="混合加密"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small" />
        <ImageView
            android:id="@+id/imageview_mix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_content_margin_left_right"
            android:src="@drawable/checkbox_style_imagelevel" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/huise" />

    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/layout_type_none"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_content_height"
        android:layout_below="@+id/layout_type_mix"
        android:layout_marginTop="@dimen/list_item_textview_margin_top"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_content_margin_left_right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="无加密"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small" />
        <ImageView
            android:id="@+id/imageview_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_content_margin_left_right"
            android:src="@drawable/checkbox_style_imagelevel" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/huise" />

    </RelativeLayout>

</RelativeLayout>
