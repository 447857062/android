<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.router.firmwareupdate.UpdateStatusActivity">
    <include layout="@layout/layout_title_with_back_center_titletext" android:id="@+id/layout_set_new_router_title"/>

    <ImageView
        android:layout_below="@+id/layout_set_new_router_title"
        android:id="@+id/image_show_logo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/set_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/image_show_logo"
        android:id="@+id/textview_updateing"
        android:layout_marginTop="40dp"
        android:textColor="@color/modify_password_text_color"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_sure"
        android:visibility="gone"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xhdpi_15"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview_updateing"
        android:layout_marginTop="200dp"
        android:background="@drawable/firmware_upgrade_sure_button"
        android:layout_width="131dp"
        android:layout_height="36dp" />
</RelativeLayout>
