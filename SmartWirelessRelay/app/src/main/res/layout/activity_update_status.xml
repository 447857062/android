<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deplink.com.smartwirelessrelay.homegenius.activity.device.router.firmwareupdate.UpdateStatusActivity">
    <RelativeLayout
        android:id="@+id/layout_set_new_router_title"
        android:layout_width="match_parent"
        android:background="@color/blue_add_new_router_title"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_back"
            android:src="@drawable/arror_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/title_text_style"
            android:layout_centerInParent="true"
            android:text="固件升级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/layout_set_new_router_title"
        android:id="@+id/image_show_logo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/set_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/image_show_logo"
        android:id="@+id/textview_updateing"
        android:layout_marginTop="40dp"
        android:textColor="@color/modify_password_text_color"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_sure"
        android:visibility="gone"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xhdpi_15"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview_updateing"
        android:layout_marginTop="200dp"
        android:background="@drawable/firmware_upgrade_sure_button"
        android:layout_width="131dp"
        android:layout_height="36dp" />
</RelativeLayout>
