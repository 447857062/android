<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">

    <ListView
        android:id="@+id/list_doorbell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <Button
        android:id="@+id/button_connect"
        android:text="获取UID(验证中继器合法性(手机要先连接上中继器的wifi)）"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/button_connect"
        android:id="@+id/textview_ssid_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textview_ssid_name"
        android:id="@+id/textview_uid_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/textview_uid_name"
        android:id="@+id/button_query_devlist"
        android:text="查询设备列表"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/button_query_devlist"
        android:id="@+id/button_query_lock_history"
        android:text="查询开锁记录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/button_query_lock_history"
        android:id="@+id/button_heath_switch"
        android:text="心跳开关"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
